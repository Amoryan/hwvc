<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uifabric_date_picker_fragment_title_horizontal_margin"
        android:layout_marginEnd="@dimen/uifabric_date_picker_fragment_title_horizontal_margin"
        android:layout_marginTop="@dimen/uifabric_date_picker_fragment_title_vertical_margin"
        android:layout_marginBottom="@dimen/uifabric_date_picker_fragment_title_vertical_margin"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.microsoft.officeuifabric.calendar.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>